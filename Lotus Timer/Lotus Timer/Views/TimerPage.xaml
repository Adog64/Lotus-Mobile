<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Lotus_Timer.ViewModels"
             xmlns:controls="clr-namespace:Lotus_Timer.Controls"
             x:Class="Lotus_Timer.Views.TimerPage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="130"/>
            </Grid.ColumnDefinitions>
                <Label
                Grid.Row="1"
                Grid.ColumnSpan="4"
                Text="{Binding Scramble}"
                HorizontalTextAlignment="Center"
                Padding="10"
                TextColor="{StaticResource Primary}"
                FontSize="14"
                HorizontalOptions="Center"
                />
            <Button
                Grid.Row="2"
                Grid.ColumnSpan="4"
                Text="{Binding ClockFace}"
                CornerRadius="150"
                FontSize="50"
                TextColor="{StaticResource Primary}"
                BackgroundColor="#00ffffff"
                Command="{Binding TimerButtonCommand}"
                WidthRequest="300"
                HeightRequest="300"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"/>
            <controls:CircleCountdown
                Grid.Row="2"
                Grid.ColumnSpan="4"
                Progress="{Binding Progress}"
                ProgressStartColor="{StaticResource Primary}"
                ProgressEndColor="{StaticResource Primary}"
                StrokeWidth="12"/>
            <Button
                Grid.Row="4"
                Grid.Column="1"
                Text="+2"
                Command="{Binding Plus2Command}"
                TextColor="{StaticResource Background}"
                IsVisible="{Binding ShowingTimeModifiers}"
                IsEnabled="{Binding ShowingTimeModifiers}"
                Padding="-1"/>
            <Button
                Grid.Row="4"
                Grid.Column="2"
                Text="dnf"
                Command="{Binding DnfCommand}"
                TextColor="{StaticResource Background}"
                IsVisible="{Binding ShowingTimeModifiers}"
                IsEnabled="{Binding ShowingTimeModifiers}"
                Padding="-1"/>
            <StackLayout Grid.Row="6" Grid.ColumnSpan="2">
                <Label
                    FontSize="14"
                    Text="{Binding Best}"
                    TextColor="{StaticResource Primary}"
                    HorizontalTextAlignment="End"
                    HorizontalOptions="Center"/>
                <Label
                    FontSize="14"
                    Text="{Binding Ao5}"
                    TextColor="{StaticResource Primary}"
                    HorizontalOptions="Center"/>
                <Label
                    FontSize="14"
                    Text="{Binding Ao12}"
                    TextColor="{StaticResource Primary}"
                    HorizontalOptions="Center"/>
            </StackLayout>
            <StackLayout Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2">
                <Label
                    FontSize="14"
                    Text="{Binding Worst}"
                    TextColor="{StaticResource Primary}"
                    HorizontalTextAlignment="End"
                    HorizontalOptions="Center"/>
                <Label
                    FontSize="14"
                    Text="{Binding Ao100}"
                    TextColor="{StaticResource Primary}"
                    HorizontalOptions="Center"/>
                <Label
                    FontSize="14"
                    Text="{Binding Ao1000}"
                    TextColor="{StaticResource Primary}"
                    HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>